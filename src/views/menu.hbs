<h1>{{pageName}}</h1>
<div >
<form class="side" action="/menu/edit" method = "get">
  <button class="side"> Add</button>
</form>
<form class="side" action="/menu/delete" method = "get">
  <button class="side">Delete</button>
</form>
<form id="tableForm" action="/menu" method="post">
  <button class="side">View menu from selected store:</button>
  <select class="searchMenu" name="searchMenu" id="view">
    {{#if stores.length }}
        {{#each stores }}
              <option value = "{{this.sID}}">  {{this.sID}}</option>
        {{/each}}
    {{else}}
        <tr><td colspan="3"><p class='lead'><em>No records were found.</em></p></td></tr>
    {{/if}}
  </select>
</form>

</div>
<table>
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Item Price</th>
      <th>sID</th>
    </tr>
  </thead>

  <tbody>
          {{#if rows.length }}
              {{#each rows }}
                  <tr>
                      <td>{{this.itemName}}</td>
                      <td>{{this.itemPrice}}</td>
                      <td>{{this.sID}}</td>
                  </tr>
              {{/each}}
          {{else}}
              <tr><td colspan="3"><p class='lead'><em>No records were found.</em></p></td></tr>
          {{/if}}
      </tbody>
</table>

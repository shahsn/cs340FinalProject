<h2> {{message}} </h2>

<form method = "post" id = "addForm">
  <fieldset>
    <legend> Store Info </legend>

    <p>
      <label for "sID"> Store ID: </label>
      <input type ="number" min=1 max =9999999999 class ="required" name="sID" id="sID" required>
    </p>

    <p>
      <label for "Street"> Street: </label>
      <input type ="text" class ="required" name="Street" id="Street" required>
    </p>

    <p>
      <label for "City"> City: </label>
      <input type ="text" class ="required" name="City" id="City" required>
    </p>

    <p>
      <label for "ZIP"> Zip: </label>
      <input type ="number" class ="required" name="ZIP" id="ZIP" required>
    </p>

    <p>
      <label for "Hours"> Hours: </label>
      <input type ="text" class ="required" name="Hours" id="Hours" required>
    </p>

    <p>
      <input type="submit" value="Submit" />
      <input type="reset" value="Clear" />
    </p>
  </form>
